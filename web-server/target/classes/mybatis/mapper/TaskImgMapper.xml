<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.complaint_system.mapper.TaskImgMapper">


    <!--
            @auther Oh… Yeah!!! 2023-10-11
            根据id查询TaskImg
    -->
    <select id="selectById" resultType="com.example.complaint_system.domain.TaskImg">
        select
                *
        from
              task_img
        where
            id = #{id}
        limit 1
    </select>

    <!--
            @auther Oh… Yeah!!! 2023-10-11
            根据imgUrl查询TaskImg
    -->
    <select id="selectByimgUrl" resultType="com.example.complaint_system.domain.TaskImg">
        select
            *
        from
            task_img
        where
            img_url = #{imgUrl}
        limit 1
    </select>

    <!--
               @auther Oh… Yeah!!! 2023-10-11
               增加TaskImg数据
       -->
    <insert id="addTaskImg">
        insert into
            task_img
        values
            (null,#{imgUrl},#{partId},#{createBy},
             #{createTime},#{updateBy},#{updateTime},
             #{status},#{delFlag});
    </insert>

    <!--
            @auther Oh… Yeah!!! 2023-10-12
               删除TaskImg数据
    -->
    <delete id="deleteByIdTaskImg">
        delete from task_img where id = #{id}
    </delete>

    <!--
           @auther Oh… Yeah!!! 2023-10-12
              更新TaskImg数据
   -->
    <update id="updateByIdTaskImg">
        update task_img
        <set>
            <if test="imgUrl != null and imgUrl != '' ">
                img_url = #{imgUrl},
            </if>
            <if test="partId != null">
                part_id = #{partId},
            </if>
            <if test="createBy != null ">
                create_by = #{createBy},
            </if>
            <if test="createTime != null ">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag}
            </if>
        </set>
        where
        id = #{id}
    </update>

</mapper>